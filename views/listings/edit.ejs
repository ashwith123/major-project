    <form method="post" action="/listings/<%= listingz._id %>?_method=put">
      <input name="listing[title]" value="<%= listingz.title %>" />
      <br />
      <textarea name="listing[description]">
<%= listingz.description %></textarea
      >
      <br />
      <input name="listing[image]" value="<%= listingz.image %>" />
      <br />
      <input name="listing[price]" value="<%= listingz.price %>" />
      <br />
      <input name="listing[country]" value="<%= listingz.country %>" />
      <br />
      <input name="listing[location]" value="<%= listingz.location %>" />
      <br />
      <button type="submit">Submit</button>
    </form>
  </body>
